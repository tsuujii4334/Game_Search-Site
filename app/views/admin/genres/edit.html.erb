<div class ="container px-4 bg-white">
  <div class="row">
    <div class="col">
     <h3>ジャンル編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
    <%= form_with model: @genre, url: admin_update_genre_path do |f| %>
      <span>ジャンル名</span>
      <%= f.text_field :genre_name, autofocus: true %>
      <%= f.submit "変更を保存", class:'btn btn-success' %>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9"></div>
    <div class="col-md-3">
      <%= link_to "ジャンル一覧へ戻る", admin_genres_path, :class => "btn btn-primary" %>
    </div>
  </div>
</div>