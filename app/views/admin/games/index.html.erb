<div class ="container px-4 bg-white">
  <div class="row">
    <div class="col">
     <span>ゲーム一覧</span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <h4>絞り込み</h4><span>(全<%= @gamecount%>件)</span>
      <p>金額</p>
      <div><%= link_to "無料", admin_games_path(price: 0), :class => "custom-button" %></div>
      <div><%= link_to "1~500円", admin_games_path(price:1..500), :class => "custom-button" %></div>
      <div><%= link_to "501~2,000円", admin_games_path(price:501..2000), :class => "custom-button" %></div>
      <div><%= link_to "2,001~5,000円", admin_games_path(price:2001..5000), :class => "custom-button" %></div>
      <div><%= link_to "5001円~", admin_games_path(price: 5001..), :class => "custom-button" %></div>
      <div><%= link_to "新規登録", admin_games_new_path, :class => "custom-button-green" %></div>
    </div>
    <div class="col-md-7 scroll">
    <% @games.each do |game| %>
      <div class="row">
        <div class="col-md-3">
          <%= link_to admin_show_game_path(game.id) do %>
            <div><%= image_tag game.get_profile_image(100,100) %></div>
          <% end %>
        </div>
        <div class="col-md-5">
          <div><%= game.name %></div>
          <div><%= game.genre.genre_name %></div>
        </div>
        <div class="col-md-4">
          <div><%= l game.created_at %>(公開日)</div>
          <div>￥<%= game.price %></div>
        </div>
      </div>
    <% end %>
    <%= paginate @games %>
    </div>
  </div>
</div>