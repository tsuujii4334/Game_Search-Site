<div class="bg-white">
  <%= flash[:notice] %>
</div>
<div class="contaier">
  <div class="row">
    <div class="col-md-8 offset-md-1 bg-white">
     <!--userindexの記述-->
      <h2>ユーザー一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
       </thead>
       <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.id %>
          </td>
          <td>
            <%= link_to admin_show_user_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <% if user.is_deleted == false %>
            <%= "有効" %>
            <% else %>
            <%= "無効" %>
            <% end %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>