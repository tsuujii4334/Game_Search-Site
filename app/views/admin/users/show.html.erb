<div class="contaier">
 <div class="row">
  <div class="col-md-8 offset-md-1">
   <!--customerindexの記述-->
    <h2>
      <%= @user.name %>さんの会員情報
    </h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>名前(ニックネーム)</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <span>
            <%= f.radio_button :@user, :false %>
            <%= form.label :is_deleted, "登録中" %>  
            </span>
            <span>
            <%= f.radio_button :@user, :true %>
            <%= form.label :is_deleted, "退会" %>  
            </span>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-md-3">
      <div>
        <h4>
          プロフィール画像
        </h4>
        <div>
          <%= @user.avatar %>
        </div>
      </div>
    </div>
  </div>
</div>