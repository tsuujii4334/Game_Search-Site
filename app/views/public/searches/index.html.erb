<div class="container px-5,py-10">
  <div class="row">
    <div class="col">
      <table class="table table-hover table-inverse bg-white">
        <h2 class="bg-white">
          <!--検索対象モデルがGameの時 -->
          <% if @range == "Game" %>
            検索ワード "<%= @word %>"
          <!--検索対象モデルがGameではない時(= 検索対象モデルがGenreの時) -->
          <% else %>
            検索ワード "<%= @word %>"
          <% end %>
        </h2>
        <thead>
          <tr>
            <th>イメージ画像</th>
            <th>ゲーム名</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td>
                <%= link_to show_game_path(game.id) do %>
                  <%= image_tag game.get_profile_image(50, 50) %>
                <% end %>
              </td>
              <td><%= game.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>