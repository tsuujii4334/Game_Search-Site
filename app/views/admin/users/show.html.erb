<div class="contaier">
 <div class="row">
  <div class="col-md-4 offset-md-1 bg-white">
   <!--customerindexの記述-->
    <h2>
      <%= @user.name %>さんの会員情報
    </h2>
      <table class="table table-hover table-inverse">
        <%= form_with model: [:admin, @user], url: admin_update_user_path(@user.id) do |f| %>
        <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>名前(ニックネーム)</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <span>
            <%= f.radio_button :is_deleted, :false %><!--会員ステータスが更新できない-->
            <%= f.label :is_deleted, "登録中" %>
            </span>
            <span>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会" %>
            </span>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= f.submit "変更を保存", class:'btn btn-success' %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-3 bg-white">
      <div>
        <h4>
          プロフィール画像
        </h4>
        <div>
          <%= image_tag @user.get_profile_avatar(100,100) %>
        </div>
      </div>
    </div>
  </div>
</div>