<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "Game" %>
  <h2>Games search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td>
            <%= link_to show_game_path(game.id) do %>
              <%= image_tag game.get_profile_image(50, 50) %>
            <% end %>
          </td>
          <td><%= game.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがGameの時) -->
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>opinion</th>

      </tr>
    <tbody>
    <h2>Genres search for "<%= @word %>"</h2>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to show_game_path(genre.game.id) do %>
            <%= image_tag genre.game.get_profile_image(50, 50) %>
          <% end %>
        </td>
        <td><%= link_to genre.game.name, show_game_path(genre.game.id) %></td>
        <td><%= genre.game.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>