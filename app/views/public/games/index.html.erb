<div class ="container px-4">
  <div class="row">
    <div class="col">
     <span>ゲーム一覧</span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h4>絞り込み</h4><span>(全<%= @gamecount%>件)</span>
      <p>金額</p>
      <div>
        <%= link_to "無料", index_games_path :class => "btn btn-primary" %>
        <%= link_to "1~500円", index_games_path :class => "btn btn-primary" %>
        <%= link_to "501~2,000円", index_games_path :class => "btn btn-primary" %>
        <%= link_to "2,001~5,000円", index_games_path :class => "btn btn-primary" %>
        <%= link_to "5001円", index_games_path :class => "btn btn-primary" %>
      </div>
    </div>
    <div class="col-md-8 scroll">
    <% @games.each do |game| %>
    <div class="row">
      <div class="col-md-3">
        <%= link_to show_game_path(game.id) do %>
          <div><%= image_tag game.get_profile_image(100,100) %></div>
        <% end %>
      </div>
      <div class="col-md-3">
        <div><%= game.name %></div>
        <div><%= game.genre.genre_name %></div><!--ジャンルが正しく表示されない-->
      </div>
      <div class="col-md-4">
        <p><%= l game.created_at %>(公開日)</p>
      </div>
      <div class="col-md-2">
        <%= game.price %>￥
      </div>
    </div>
    <% end %>
    </div>
    <%= paginate @games %>
  </div>
</div>