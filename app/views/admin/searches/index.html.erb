<div class="container px-5,py-10 bg-white">
  <div class="row">
    <div class="col">
      <table class="table table-hover table-inverse bg-white">
        <!--検索対象モデルがUserの時 -->
        <% if @range == "User" %>
        <h2>検索ワード "<%= @word %>"</h2>
          <thead>
            <tr>
              <th>イメージ画像</th>
              <th>名前</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_avatar(100, 100) %></td>
                <td>
                  <%= link_to admin_show_user_path(user.id) do %>
                    <%= user.name %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <!--検索対象モデルがUserではない時(= 検索対象モデルがGameの時) -->
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>opinion</th>
            </tr>
          <tbody>
          <h2>検索ワード "<%= @word %>"</h2>
          <% @games.each do |game| %>
            <tr>
              <td><%= image_tag game.get_profile_image(100, 100) %></td>
              <td><%= link_to game.name, admin_show_game_path(game.id) %></td>
              <td><%= l game.created_at %></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>