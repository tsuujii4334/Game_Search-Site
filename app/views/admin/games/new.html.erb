<div class="container px-5 bg-white">
  <%= form_with model: @game, url: admin_create_game_path do |f| %>
  <div class="row">
    <div class="col-md-3">
      <h3>ゲーム新規登録</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <p>ゲーム画像</p>
    </div>
    <div class="col-md-4">
      <div class="field">
        <%= f.file_field :profile_image, accept:"image/*" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <p>ゲームタイトル</p>
    </div>
    <div class="col-md-4">
      <div class="field">
        <%= f.text_field :name, autofocus: true, value:"タイトル名" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <p>ゲーム説明</p>
    </div>
    <div class="col-md-6">
      <div class="introduction_field">
        <%= f.text_area :introduction, size: "50", autofocus: true, value:"ここに説明文を記入します。" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <p>ジャンル</p>
    </div>
    <div class="col-md-6">
      <div class="field">
        <%= f.select :genre_id, options_from_collection_for_select(@genres_name, :id, :genre_name) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <p>価格</p>
    </div>
    <div class="col-md-6">
      <div class="field">
        <%= f.number_field :price, autofocus: true, autocomplete: "price" %>円
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
    </div>
    <div class="col-md-4">
      <%= f.submit "新規登録", class:'btn btn-success' %>
    </div>
  <% end %>
</div>
