<div class ="container px-4">
  <div class="row">
    <div class="col">
     <span>ゲーム一覧</span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
        <h4>絞り込み</h4><span>(該当数<%= @gamecount%>件)</span>
      <p>金額</p>
      <%= link_to admin_games_new_path do %>
        <p>ゲーム新規登録</p>
      <% end %>
    </div>
    <div class="col-md-8 scroll">
    <% @games.each do |game| %>
      <div class="row">
        <div class="col-md-3">
          <%= link_to admin_show_game_path(game.id) do %>
            <div><%= image_tag game.get_profile_image(100,100) %></div>
          <% end %>
        </div>
        <div class="col-md-5">
          <div><%= game.name %></div>
          <div><%= game.genre.genre_name %></div>
        </div>
        <div class="col-md-4">
          <div><%= l game.created_at %>(公開日)</div>
          <div>￥<%= game.price %></div>
        </div>
      </div>
    <% end %>
    <%= paginate @games %>
    </div>
  </div>
</div>