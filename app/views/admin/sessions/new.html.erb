<div class="bg-white">
  <%= flash[:notice] %>
</div>
<div class="container px-5,py-10">
  <%= form_with model: @admin, url: new_admin_session_path do |f| %>
  <div class="row">
    <div class="col-md-6 bg-white">
      <h3>管理者ログイン</h3>
    </div>
    <div class="col-md-6"></div>
  </div>
  <div class="row">
    <div class="col-md-3 bg-white">
      <p>メールアドレス</p>
    </div>
    <div class="col-md-3 bg-white">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <div class="col-md-6"></div>
  </div>
  <div class="row">
    <div class="col-md-3 bg-white">
      <p>パスワード</p>
    </div>
    <div class="col-md-3 bg-white">
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-passwoed" %>
      </div>
    </div>
    <div class="col-md-6"></div>
  </div>
  <div class="row">
    <div class="col-md-3 bg-white">
    </div>
    <div class="col-md-3 bg-white">
      <div class="actions">
        <%= f.submit "ログイン", class:'btn btn-success' %>
      </div>
    </div>
    <div class="col-md-6">
    </div>
  </div>
  <% end %>
  <%= render "admin/shared/links" %>
</div>

