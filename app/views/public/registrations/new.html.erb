<div class="container px-5,py-10">
  <%= form_with model: @user, url: new_user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-3 bg-white">
      <h3>新規会員登録</h3>
    </div>
    <div class="col-md-4 bg-white"></div>
    <div class="col-md-5"></div>
  </div>
  <div class="row">
    <div class="col-md-3 bg-white">
      <p>プロフィール画像</p>
    </div>
    <div class="col-md-4 bg-white">
      <div class="field">
        <%= f.file_field :profile_avatar, accept: "image/*" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 bg-white">
      <p>名前</p>
    </div>
    <div class="col-md-4 bg-white">
      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 bg-white">
      <p>メールアドレス</p>
    </div>
    <div class="col-md-4 bg-white">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <div class="col-md-5">
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 bg-white">
      <% if @minimum_password_length %>
        <em>パスワード(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
    </div>
    <div class="col-md-4 bg-white">
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
    <div class="col-md-5">
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 bg-white">
      <p>パスワード(確認用)</p>
    </div>
    <div class="col-md-4 bg-white">
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
    <div class="col-md-5">
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 bg-white">
    </div>
    <div class="col-md-4 bg-white">
      <div class="actions">
        <%= f.submit "新規登録", class:'btn btn-success' %>
      </div>
    </div>
    <div class="col-md-5">
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-md-7">
    </div>
    <div class="col-md-5 bg-white">
      <h5>既に登録済みの方</h5>
      <p>
        <%= link_to "こちら", new_user_session_path %>からログインしてください
      </p>
    </div>
  </div>
</div>




