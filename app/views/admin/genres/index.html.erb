<div class="bg-white">
  <%= flash[:notice] %>
</div>
<div class ="container px-4">
  <div class="row">
    <div class="col-md-6 bg-white">
     <h3>ジャンル一覧・追加</h3>
    </div>
    <div class="col-md-6"></div>
  </div>
  <div class="row">
    <div class="col-md-6 bg-white">
    <%= form_with model: @genre, url: admin_genres_create_path do |f| %>
      <span>ジャンル名</span>
      <%= f.text_field :genre_name, autofocus: true %>
      <%= f.submit "登録", class:'btn btn-success' %>
    <% end %>
    </div>
    <div class="col-md-6"></div>
  </div>
  <div class="row">
    <div class="col-md-6 bg-white">
      <table>
        <thead>
          <tr>
            <td>ジャンル</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.genre_name %>
            </td>
            <td>
              <%= link_to admin_edit_genre_path(genre.id) do %>
                編集する
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-6"></div>
  </div>
</div>
